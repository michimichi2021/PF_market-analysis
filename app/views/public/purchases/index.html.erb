<h2>購入履歴一覧</h2>
<table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>注文日</th>
            <th>商品画像</th>
            <th>商品名</th>
            <th>商品の金額</th>
            <th>出品者の名前</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
              <td><%= purchase.created_at.strftime('%Y/%m/%d') %></td>
              <td><% if purchase.item.image.attached? %>
                    <%= image_tag purchase.item.image.variant(resize:'100x100') %>
                  <% else %>
                   <%= image_tag 'no_image.jpg' %>
                  <% end %></td>
              <td><%= purchase.item.name %></td>
              <td>¥<%= purchase.item.price %></td>
              <td><%= link_to '出品者詳細ページへ',user_path(purchase.item.user) %></td>
            </tr>  
          <% end %>
        </tbody>
  </table>
  
 