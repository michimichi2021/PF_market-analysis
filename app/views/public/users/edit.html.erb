<div class='container mb-5'>
  <div class='row text-center'> 
  
  <div class='mt-5'>
    <span class='fs-3'>会員情報編集画面</span>
  </div>
  
  <%= form_with model:@user, local:true do |f| %>

    <div class='form-inline mt-3'>
    <div>名前</div>
      <div class='mt-2'>（姓）<%= f.text_field :last_name, autofocus: true, placeholder:'山田' %></div>
      <div class='mt-1'>（名）<%= f.text_field :first_name,autofocus: true, placeholder:'太郎' %></div>
    </div>
    
    <div class='form-inline mt-3'>
    <div>フリガナ</div>
      <div class='mt-2'>（セイ）<%= f.text_field :last_name_kana, autofocus: true, placeholder:'ヤマダ' %></div>
      <div class='mt-1'>（メイ）<%= f.text_field :first_name_kana, autofocus: true, placeholder:'タロウ'%></div>
    </div>
    
    <div class='mt-3'>
      <div>郵便番号</div>
      <%= f.text_field :postal_code, class:'col-md-6 col-lg-4', autofocus: true, placeholder:'0000000' %>
    </div>
      
    <div class='mt-3'>
      <div>住所</div>
      <%= f.text_field :address, class:'col-md-9 col-lg-3', autofocus: true, placeholder:'東京都渋谷区代々木神園町0-0' %>
    </div>
  
    <div class='mt-3'>
    　<div>電話番号</div>
      <%= f.telephone_field :telephone_number, class:'col-md-6 col-lg-3', autofocus: true, placeholder:'00000000000' %>
    </div>
    
    <div class='mt-3'>
      <div>ニックネーム</div>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ニックネーム",class:'col-md-6 col-lg-3' %>
    </div>
    
    <div class='mt-3'>
      <div>自己紹介文</div>
      <%= f.text_field :profile,rows:'10',placeholder:'自己紹介文', autofocus: true,class:'col-md-6 col-lg-4' %>
    </div>
    
    <div class='mt-3'>
      <div>プロフィール画像</div>
      <%= f.file_field :image ,class:' text-center'%>
    </div>
  
    <div class='actions'>
      <%= f.submit '会員情報を変更する',class: 'tn btn-primary mt-4' %>
    </div>
  
  <% end %>
  
  <div class='mt-5'>
  <%= link_to'退会する',users_unsubscribe_path %>  
  </div>

  </div>
</div>