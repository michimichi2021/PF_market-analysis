<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <% if @user.image.attached? %>
            <%= image_tag @user.image.variant(resize:'300x300') %>
          <% else %>
            <%= image_tag 'no_image.jpeg' %>
          <% end %>
        </tr>
        <tr>
      	  <th>name</th>
      	  <th><%= current_user.nickname %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= current_user.introduction %></th>
        </tr>
      </table>

      <div class='row'>
        <%= link_to '',edit_users_path,class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      
      <div class="row">
        <h4>いいねした商品一覧</h4>
        <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>image</th>
            <th>Category</th>
            <th>Explain</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
            </tr>  
        </tbody>
        </table>
      </div>
      
    </div>
    
    <div class='col-md-8 offset-md-1'>
    <h2>出品した商品一覧</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>image</th>
          <th>Category</th>
          <th>Explain</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <td></td>
            <td></td>
            <td></td>
          </tr>  
      </tbody>
    </table>
    </div>
  </div>
</div>