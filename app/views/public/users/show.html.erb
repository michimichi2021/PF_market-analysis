<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <% if @user.image.attached? %>
            <%= image_tag @user.image.variant(resize:'300x300') %>
          <% else %>
            <%= image_tag 'no_image.jpeg' %>
          <% end %>
        </tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.profile %></th>
        </tr>
      </table>
　　　
　　　
      <div class='row'>
      　<% if @user.id == current_user.id %> 
        <%= link_to '', edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        <%= link_to "", new_item_path, class:"far fa-plus-square", :style => "color: black;" %>
        <% end %>
      </div>
      
    </div>
   
    
    <div class='col-md-8 offset-md-1'>
    <h2>出品した商品一覧</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>画像</th>
          <th>商品名</th>
          <th>金額</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td>
            <% if user_signed_in? && item.purchase.blank? %>
              <%= link_to item_path(item) do %>   
                <% if item.image.attached? %>
                  <%= image_tag item.image.variant(resize:'300x300') %>
                <% else %>
                  <%= image_tag 'no_image.jpg' %>
                <% end %>
              <% end %>
            <% else %>
             <h2 class="sold-out">Sold Out!</h2>
       　　　　 <% end %>
          </td>
            <td>
              <%= link_to item_path(item) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
          </tr> 
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

