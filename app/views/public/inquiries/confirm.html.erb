<div class='container mt-5'>
  <div class='row'>
    <div class='col-2'></div>
    <div class='col-8'> 
    <div class='page-header'>
      <h1 class='text-center'>お問い合わせ</h1>
    </div>
    <%= form_with model:@inquiry,url:inquiries_thanks_path,method: :post,local: true do |f| %>
      <table class='table'>
        <tr>
          <th class='col-3'>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </td>
        </tr>
        <tr>
          <th class='col-3'>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </td>
        </tr>
        <tr>
          <th class='col-3'>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= simple_format(@inquiry.message) %>
          </td>
        </tr>
      </table>
      <div class='text-center'>
      <%= f.submit '送信', class:'btn btn-primary' %>
      </div>
    <% end %>
    </div>
    <div class-'col-2'></div>
  </div>
</div>