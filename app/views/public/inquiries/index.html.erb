<div class='container mt-5 mb-5'>
  <div class='row text-center'>
  <div class-'col-1'></div>
  <div class-'col-10'>
    
  <div class='mt-3'>
    <span class='fs-3'>お問い合わせ</span>
  </div>
  <%= form_with model:@inquiry,url:inquiries_confirm_path,method: :post,local: true do |f| %>
    <% if @inquiry.errors.any? %>
      <div class='alert alert-danger' role='alert'>
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='mt-3'>
      <div>名前(必須)</div>
      <%= f.text_area :name,cols:'50',rows:'1',placeholder:'山田太郎',class: 'col-4' %>
    </div>
    <div class='mt-3'>
      <div>メールアドレス(必須)</div>
      <%= f.text_area :email,cols:'50',rows:'1', placeholder:'sample.example.com',class: 'col-5' %>
    </div>
    <div class='mt-3'>
      <div>お問い合わせ内容</div>
    　<%= f.text_area :message, rows:'5',cols:'50',class: 'col-6' %>
    </div>
    <div class='text-center'>
    <%= f.submit '確認', class: 'btn btn-primary' %>
    </div>
  <% end %>
  </div>
  <div class='col-1'></div>
  </div>
</div>