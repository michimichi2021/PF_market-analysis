<div class='container mt-5 mb-5'>
  <div class='row'>
    <div class='col-2'></div>
    <div class='col-8'> 
    
    <%= form_with model:@inquiry,url:inquiries_confirm_path,method: :post,local: true do |f| %>
    
      <div class='page-header'>
        <h1 class='text-center'>お問い合わせ</h1>
      </div>
    
      <% if @inquiry.errors.any? %>
        <div class='alert alert-danger' role='alert'>
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @inquiry.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <table class='table'>
        <tr>
          <th>名前<span class='text-danger'>（必須）</span></th>
          <td class='text-center'><%= f.text_area :name,cols:'50',rows:'1',placeholder:'山田太郎' %></td>
        </tr>
        <tr>
          <th>メールアドレス<span class='text-danger'>（必須）</span></th>
          <td class='text-center'><%= f.text_area :email,cols:'50',rows:'1', placeholder:'sample.example.com' %></td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td class='text-center'><%= f.text_area :message, rows:'5',cols:'50' %></td>
        </tr>
      </table>
      <div class='text-center'>
      <%= f.submit '確認', class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div> 
    <div class='col-2'></div>
  </div>
</div>