<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>会員情報編集画面</h2>
    <%= form_with model:@user,url: admin_user_path(@user),method: :patch,local:true do |f| %>
      <div class="field">
        <%= f.label :姓 %><br />
        <%= f.text_field :last_name, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :名  %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :姓フリガナ　%><br />
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>
    
      <div class="field">
        <%= f.label :名フリガナ %><br />
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true %>
      </div>
      
      <div class="field">
        <%= f.label :電話番号 %><br />
        <%= f.text_field :telephone_number, autofocus: true %>
      </div>
     
     
      <div class="form-group">
        <%= f.label :有効 %>
        <%= f.radio_button :is_deleted, false, class: 'btn btn-secondary' %>
      </div>
      
      <div class="form-group">
        <%= f.label :退会 %>
        <%= f.radio_button :is_deleted, true, class: 'btn btn-secondary' %>
      </div>
     
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      
    
    <% end %>

  </div>
</div>