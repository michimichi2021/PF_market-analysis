<div class='container mb-5 mt-5'>
  <% if @users.count == 0 %>
    <div class='text-center'>名字検索</div>
    <%= form_tag(admin_searches_search_path,method: :get) do %>
      <div class='text-center'>
        <%= text_field(@search_content, :search_word) %>
        <input type="submit" value="&#xf002" class="fas header-search btn btn-sm btn-danger">
      </div>
    <% end %>
    <h2 class='text-center mt-5'>検索結果はありませんでした</h2>
  <% else %>
  <%= render 'layouts/user.search',search_content:@search_content,users:@users %>
  <% end %>
</div>
