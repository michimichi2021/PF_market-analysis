<main>
   <div class='row col-8 mx-auto'>
     <%= form_with model:@genre,url: admin_genres_path,method: :post, local:true do |f| %>
      
      <div class="field">
        <%= f.label :ジャンル名%><br />
        <%= f.text_field :name, autofocus: true %>
      </div>
        
      <div class="form-group">
        <%= f.submit '新規登録',class: 'btn btn-secondary' %>
      </div>
    
    <% end %>
      <table class='table table-hover table-inverse'>
        <thead class='bg-light'>
          <tr>
            <th>ジャンル名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre),class: 'btn btn-success' %></td>
            <td><%= link_to '削除する',admin_genre_path(genre),method: :delete,class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</main>