  <div class='container mb-5'>
    <div class='row col-8 mx-auto'>
      <%= form_with model:@genre,url: admin_genres_path,method: :post, local:true do |f| %>
      <div class="field mt-5">
        <%= f.label :タグ名%>
        <%= f.text_field :name, autofocus: true %>
        <%= f.submit '新規登録',class: 'btn btn-secondary' %>
      </div>
      <% end %>
      <table class='table table-hover table-inverse'>
        <thead class='bg-light'>
          <tr>
            <th>タグ名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する',edit_admin_genre_path(genre),class: 'btn btn-success' %></td>
            <td><%= link_to '削除する',admin_genre_path(genre),method: :delete,class: 'btn btn-success' %></td>
          </tr>
          <% end %>
          <%= paginate @genres %>
        </tbody>
      </table>
    </div>
  </div>