  <div class='container mb-5'>
    <div class='row mx-auto tag_index'>
      <% if @genre.errors.any? %>
      <div class='error_message mt-5'>
        <%= @genre.errors.count %>件のエラーが発生しました<br/>
          <% @genre.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      </div>
      <%= form_with model:@genre,url: admin_genres_path,method: :post, local:true do |f| %>
      <div class="field mt-3">
        <%= f.label :タグ名%>
        <%= f.text_field :name, autofocus: true %>
        <%= f.submit '新規登録',class: 'btn btn-secondary' %>
      </div>
      <% end %>
      <table class='table table-hover table-inverse'>
        <thead class='bg-light'>
          <tr>
            <th class='text-center'>タグ名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class='text-center'><%= genre.name %></td>
            <td class='text-center'><%= link_to '編集する',edit_admin_genre_path(genre),class: 'btn btn-success' %></td>
            <td class='text-center'><%= link_to '削除する',admin_genre_path(genre),method: :delete,class: 'btn btn-success' %></td>
          </tr>
          <% end %>
          <%= paginate @genres %>
        </tbody>
      </table>
    </div>
  </div>