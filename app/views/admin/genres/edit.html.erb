<main>
  <div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>ジャンル編集編集画面</h2>
    <%= form_with model:@genre,url: admin_genre_path(@genre),method: :patch,local:true do |f| %>
      
      <div class="form-group">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
      </div>
     
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    
    <% end %>
  </div>
  </div>
</main>