<div class='container mb-5'>
  <div class='row text-center'> 
  
  <div class='mt-5'>
    <span class='fs-3'>新規会員登録</span>
  </div>
  
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class='form-inline mt-3'>
  <div>名前</div>
    <div class='mt-2'>（姓）<%= f.text_field :last_name, autofocus: true, placeholder:'山田' %></div>
    <div class='mt-1'>（名）<%= f.text_field :first_name,autofocus: true, placeholder:'太郎' %></div>
  </div>
  
  <div class='form-inline mt-3'>
  <div>フリガナ</div>
    <div class='mt-2'>（セイ）<%= f.text_field :last_name_kana, autofocus: true, placeholder:'ヤマダ' %></div>
    <div class='mt-1'>（メイ）<%= f.text_field :first_name_kana, autofocus: true, placeholder:'タロウ'%></div>
  </div>
  
  <div class='mt-3'>
    <div>メールアドレス</div>
    <%= f.email_field :email, class:'col-md-8 col-lg-5', autofocus: true, placeholder:'sample.example.com', autocomplete: 'email' %>
  </div>
  
  <div class='mt-3'>
    <div>郵便番号(数字7文字)</div>
    <%= f.text_field :postal_code, class:'col-md-6 col-lg-4', autofocus: true, placeholder:'0000000' %>
  </div>
  
  <div class='mt-3'>
    <div>住所</div>
    <%= f.text_field :address, class:'col-md-9 col-lg-3', autofocus: true, placeholder:'東京都渋谷区代々木神園町0-0' %>
  </div>

  <div class='mt-3'>
  　<div>電話番号</div>
    <%= f.telephone_field :telephone_number, class:'col-md-6 col-lg-3', autofocus: true, placeholder:'00000000000' %>
  </div>

  <div class='mt-3'>
    <div>パスワード</div>
    <%= f.password_field :password, autocomplete: 'new-password',class:'col-md-6 col-lg-3' %>
  </div>
  
  <div class='mt-3'>
    <div>パスワード</br>（確認用)</div>
    <%= f.password_field :password_confirmation, class:'col-md-6 col-lg-3', autocomplete: 'new-password' %>
  </div>
  
  <div class='actions'>
    <%= f.submit '新規登録',class: 'tn btn-primary mt-4' %>
  </div>
  
  <% end %>
  
  <div class='mt-5'>
    <span class='fs-3'>既に登録済の方</span>
  </div>
  
  <div class='mt-3 mb-4'>
    <%= link_to 'こちら', new_user_session_path, class: 'signin-link' %>　からログインしてください.
  </div>

  </div>
</div>

