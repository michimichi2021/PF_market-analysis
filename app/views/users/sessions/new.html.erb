<div class='container mb-5'>
  <div class='row text-center'>

  <div class='mt-5'>
    <span class='fs-3'>ログイン</span>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  　<%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class='mt-3'>
      <div>メールアドレス</div>
      <%= f.email_field :email, class:'col-md-6', autofocus: true, placeholder:'sample.example.com', autocomplete: 'email' %>
    </div>

    <div class='mt-3'>
    <div>パスワード</div>
    <%= f.password_field :password, autocomplete: 'new-password',class:'col-6' %>
    </div>

    <div class="actions">
      <%= f.submit 'ログインする',class: 'btn btn-danger mt-4' %>
    </div>
  <% end %>

  <div class='mt-5'>
  <span class='fs-3'>会員登録がお済みでない方</span>
  </div>

  <div class='mt-3 mb-4'>
  <%= link_to 'こちら', new_user_registration_path, class: 'signin-link' %>　から会員登録してください.
  </div>

  </div>
</div>