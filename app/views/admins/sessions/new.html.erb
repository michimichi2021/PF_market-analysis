<div class='container'>
  
  <div class='row text-center'>
    
  <div class='mt-5'>
    <span class='fs-3'>ログイン</span>
  </div>  
  

  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <div class='mt-3'>
      <%= f.label :メールアドレス, class:'col-6' %>
      <%= f.email_field :email, class:'col-6', autofocus: true, placeholder:'sample.example.com', autocomplete: 'email' %>
    </div>
  
    <div class='mt-3'>
    <div>パスワード</div>
    <%= f.password_field :password, autocomplete: 'new-password',class:'col-6' %>
    </div>
    
    <div class='mt-3'>
    <div>パスワード</br>（確認用)</div>
    <%= f.password_field :password_confirmation, class:'col-6', autocomplete: 'new-password' %>
    </div>
    
    <div class='actions'>
      <%= f.submit 'ログインする',class: 'tn btn-primary mt-4' %>
    </div>
  <% end %>
  
  </div>
</div>


